<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="text_title_table">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:background">@color/background_table_color</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="text_conteudo_table">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="ButtonTheme" >
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">#FFF</item>
        <item name="android:textColorHighlightInverse">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="QuestionTheme">
        <item name="android:layout_width">343dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginTop">130dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="RadioGroupTheme">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RadioTheme">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
